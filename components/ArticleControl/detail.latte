<article>
    {position articleControlTop}
    
	<header>
		<h1>{$article->title}</h1>
	</header>

	<div id="author">{_'author'}: {$article->createUser->fullName}</div>

	<p id="description">{$article->description}</p>

	<div>
		{$article->text|noescape}
	</div>

	<footer>
		<p>{_'Published'}: {$article->publishStartDate|date:'d.m.Y, H:i'}</p>
	</footer>
	
    {position articleControlBottom}
</article>